

<div class="container text-center">
<h1>My Portfolio</h1>
    <div class="row">
        <div class="col">
            <div class="card mx-auto leftCard" style="width: 18rem;">
                <div class="card-header"><strong>Initial Deposit</strong></div>
                <p class="card-text cashText">$10000</p>
            </div>
        </div>
    </div>

        <div class="col ">
            <div class="card mx-auto rightCard" style="width: 18rem;">
                <div class="card-header"><strong>Current Portfolio Value</strong></div>
                <p class="card-text cashText" ><%=@value%></p>
            </div>
        </div>
    </div>
</div>

    <div class="row">
        <table class="table table-striped table-dark">
        <thead>
            <tr>
            <th scope="col">Symbol</th>
            <th scope="col">Company Name</th>
            <th scope="col"># of Shares</th>
            <th scope="col">Avg. Price Paid</th>
            <th scope="col">Current Price</th>

            </tr>
        </thead>
        <tbody>
            <%@names.size.times do |index|%>
                <tr>
                <th scope="row"><%=@symbols[index]%></th>
                <td><%=@names[index]%></td>
                <td><%=@shares[index]%></td>
                <%if @avg[index] != "-"%>
                    <td><%="$#{@avg[index]}"%></td>
                <%else%>
                    <td><%="#{@avg[index]}"%></td>
                <%end%>
                <td><%="$#{@prices[index]}"%></td>
                </tr>
            <%end%>
        </tbody>
        </table>
    </div>
</div>