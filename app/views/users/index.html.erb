

<div class="container text-center">
    <div class="row topspace">
        <div class="col">
            <div class="card mx-auto leftCard" style="width: 18rem;">
                <div class="card-header"><strong>Initial Deposit:</strong></div>
                <p class="card-text cashText"><%="$#{@initialDeposit.round(0)}"%></p>
            </div>
        </div>

        <div class="col ">
            <div class="card mx-auto rightCard" style="width: 18rem;">
                <div class="card-header"><strong>Current Portfolio Value:</strong></div>
                <p class="card-text cashText" ><%="$#{@value}"%></p>
            </div>
        </div>

        <div class="col ">
            <div class="card mx-auto rightCard" style="width: 18rem;">
                <div class="card-header"><strong>Difference:</strong></div>
                <%if @change < 0%>
                    <p class="card-text cashText red" ><%="#{@change}%"%></p>
                <%else%>
                    <p class="card-text cashText green" ><%="+#{@change}%"%></p>
                <%end%>
            </div>
        </div>
    </div><br>

    <div class="row">
        <table class="table table-striped table-dark">
        <thead>
            <tr>
            <th scope="col">Symbol</th>
            <th scope="col">Company Name</th>
            <th scope="col"># of Shares</th>
            <th scope="col">Avg. Price Paid</th>
            <th scope="col">Current Price</th>

            </tr>
        </thead>
        <tbody>
            <%@names.size.times do |index|%>
                <tr>
                <th scope="row"><%=@symbols[index]%></th>
                <td><%=@names[index]%></td>
                <td><%=@shares[index]%></td>
                <%if @avg[index] != "-"%>
                    <td><%="$#{@avg[index]}"%></td>
                <%else%>
                    <td><%="#{@avg[index]}"%></td>
                <%end%>
                <td><%="$#{@prices[index]}"%></td>
                </tr>
            <%end%>
        </tbody>
        </table>
    </div><br><br><br>
    <h2>Find Companies</h2><br><br>
    <div class="row">
        <div class="col ">
            <div class="card mx-auto rightCard" style="width: 18rem;">
                <div class="card-header"><strong>Available to Spend:</strong></div>
                <p class="card-text cashText" ><%="$#{@cash}"%></p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col ">
<!--            <form class="form-inline justify-content-center">
                <label for="companySearch">Search by Company Symbol: </label>
                    <input type="text" class="form-control" id="companySearch" placeholder="ex. AAPL">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>

            </form>
-->
            <%= form_with(model:@company, local:true,class:"justify-content-center form-inline") do |f| %>
                <div class="form-group mx-sm-3 mb-2">
                    <%= f.text_field :symbol, label: "Search by Company Symbol:",placeholder:"ex. AAPL",class:"form-control"  %>
                </div>
                <%= f.submit "Submit",class:"btn btn-primary mb-2"%>
            <% end %>
        </div>
    </div>

</div>